# Maintainer: Kenny Hung
pkgname=nordvpn-s6
pkgver=20200404
pkgrel=1
pkgdesc="s6 service scripts for nordvpn"
arch=('any')
url="https://github.com/artix-linux"
groups=('s6-galaxy')
provides=('nordvpn-runscripts')
conflicts=('nordvpn-runscripts')
depends=('nordvpn-bin' 's6')
install=nordvpn.install
source=("nordvpn.run" "nordvpn.type")

285ab5d029f95444cc0bf43fedfb62c80eb5404d4ec26b383c8dfe8f4b2f1b4a  nordvpn.run
d0001a150b83f68f09004c5059045cb76a3f064eed4d42ce072bc3722c118006  nordvpn.type

sha256sums=('285ab5d029f95444cc0bf43fedfb62c80eb5404d4ec26b383c8dfe8f4b2f1b4a'
            'd0001a150b83f68f09004c5059045cb76a3f064eed4d42ce072bc3722c118006')

_inst_sv(){
    for file in run type; do
        if test -f "$srcdir/$1.$file"; then
            install -Dm644 "$srcdir/$1.$file" "$pkgdir/etc/s6/sv/$1/$file"
        fi
    done
}

package() {
    _inst_sv 'nordvpn'
}
