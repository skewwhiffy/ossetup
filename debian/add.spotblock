#!/usr/bin/env bash

sudo apt install -y make cmake git libsystemd-dev libpulse-dev g++

mkdir -p ~/code/third.party
cd ~/code/third.party
rm -rf spotblock
git clone https://github.com/mahkoh/spotblock
cd spotblock

mkdir build
cd build
cmake -DCMAKE_BUILD_TYPE=RELEASE -DCMAKE_INSTALL_PREFIX=/usr ..
make
sudo make install
