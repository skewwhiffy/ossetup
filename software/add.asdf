#!/usr/bin/env bash

URL='https://github.com/asdf-vm/asdf/releases/download/v0.18.0/asdf-v0.18.0-linux-amd64.tar.gz'
FILE=$(basename ${URL})
DEST=$PWD/$FILE
DIR="$HOME/.local/bin"

echo Downloading asdf
wget -cO  ${DEST} ${URL} --read-timeout=5 --tries=0

echo Installing to $DIR
tar -xzf ${DEST} -C ${DIR}

echo DONE
